{
  "name": "@lamnhan/nguix-starter",
  "version": "0.0.0",
  "description": "My starter Angular UI kit.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "splashscreens": "cpy splashscreens ../../../dist/starter --cwd=projects/starter/src --parents && sass dist/starter/splashscreens --style compressed",
    "build:lib": "ng build starter && npm run splashscreens && cpy README.md LICENSE dist/starter",
    "build:app": "ng build && ayedocs generate",
    "build": "npm run build:app && npm run build:lib",
    "deploy:lib": "cd ./dist/starter && npm publish && cd ../../",
    "deploy:app": "git add . && git commit -m 'deploy:app' && git push",
    "deploy": "npm run deploy:app && npm run deploy:lib",
    "test": "ng test starter",
    "lint": "ng lint starter",
    "e2e": "ng e2e",
    "coverage": "cat ./coverage/*/lcov.info | coveralls",
    "webdriver-update-ci": "webdriver-manager update --standalone false --gecko false --versions.chrome 2.37"
  },
  "keywords": [
    "lamnhan",
    "angular",
    "ui",
    "component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/nguix-starter.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/nguix-starter/issues"
  },
  "dependencies": {
    "@angular/animations": "~12.0.3",
    "@angular/common": "~12.0.3",
    "@angular/compiler": "~12.0.3",
    "@angular/core": "~12.0.3",
    "@angular/forms": "~12.0.3",
    "@angular/platform-browser": "~12.0.3",
    "@angular/platform-browser-dynamic": "~12.0.3",
    "@angular/router": "~12.0.3",
    "@lamnhan/ngx-schemata": "0.0.4",
    "@lamnhan/ngx-useful": "0.0.15",
    "@lamnhan/schemata": "0.0.12",
    "@unistylus/core": "0.0.1",
    "@unistylus/bootstrap": "0.0.2",
    "ngx-markdown": "^11.1.3",
    "ngx-quicklink": "^0.2.7",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.3",
    "@angular/cli": "~12.0.3",
    "@angular/compiler-cli": "~12.0.3",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.0.3",
    "sass": "^1.35.1",
    "typescript": "~4.2.3"
  }
}
